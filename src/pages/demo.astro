---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import {CountIncrease} from '../components/CountIncrease'
import CountDisplay from '../components/CountDisplay.svelte'


let title = 'Multi framework madness';
let description = 'Two frameworks for the price of none!';


---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		<div class="wrapper">
			<main class="content">
				<section class="intro">
					<h1>{title}</h1>
					<p>{description}</p>
				</section>
				<CountIncrease client:only="react" />
                <CountDisplay client:only />
			</main>
		</div>
	</body>
</html>

<style>
	.content {
		margin-top: 4rem;
		margin-bottom: 8rem;
	}

	.intro {
		padding-bottom: 4rem;
		margin-bottom: 2rem;
		border-bottom: 4px solid var(--theme-divider);
	}

	h1 {
		font-size: 2.5rem;
		font-weight: 700;
	}
</style>
